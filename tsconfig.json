{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "server",
    "allowJs": false,
    "typeRoots": ["node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "swc": false
  },
  "include": ["server/**/*.ts"]
}
