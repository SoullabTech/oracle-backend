{
  "compilerOptions": {
    "target": "ESNext",                 // Set the output language level
    "module": "ESNext",                 // Choose module system
    "moduleResolution": "node",         // Specify how modules are resolved
    "strict": true,                     // Enable strict type checking
    "esModuleInterop": true,            // Allow interoperation between ES modules and CommonJS
    "skipLibCheck": true,               // Skip library checking for faster build
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"                  // Specify output directory for compiled files
  },
  "include": [
    "src/**/*.ts"                       // Include TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules",                     // Exclude node_modules
    "dist",                             // Exclude dist (the output directory)
    "uploads"                           // Exclude uploads
  ]
}
