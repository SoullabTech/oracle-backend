{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,

    // ─── START alias config ─────────────────────────────────────────
    "baseUrl": ".",
    "paths": {
      "@/*":          ["src/*"],
      "@/core/*":    ["src/core/*"],
      "@/lib": ["src/lib"],
      "@/services/*": ["src/services/*"],
      "@/utils/*":    ["src/utils/*"],
      "@/lib/*":      ["src/lib/*"],
      "@/routes/*":   ["src/routes/*"],
      "@/config/*":   ["src/config/*"]
    }
    // ─── END alias config ───────────────────────────────────────────
  },
  "include": ["src", "src/types", "test", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
