{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,

    // ─── Project Layout ──────────────────────────────────────────────
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,

    // ─── Path Aliases ───────────────────────────────────────────────
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@agents/*": ["src/agents/*"]
    },

    // ─── Types ──────────────────────────────────────────────────────
    "types": ["vitest/globals", "vite/client"]
  },

  "include": [
    "src",
    "src/types",
    "test",
    "vitest.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
