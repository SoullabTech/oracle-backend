{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",     // include all TypeScript files in src
    "src/flows/**/*.*" // include any files in flows folder
  ],
  "exclude": [
    "node_modules",
    "dist",
    "uploads"
  ]
}
